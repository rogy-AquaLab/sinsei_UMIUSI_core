<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="Main">
    <WhileDoElse>
      <ShouldPowerOn />
      <ReactiveSequence>
        <PowerOn />
        <ModeControl>
          <Standby />
          <Manual />
          <Auto />
          <Debug />
        </ModeControl>
      </ReactiveSequence>
      <ReactiveSequence>
        <PowerOff />
        <Repeat num_cycles="-1">
          <AlwaysSuccess />
        </Repeat>
      </ReactiveSequence>
    </WhileDoElse>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Auto"
      editable="true" />
    <Action ID="Debug"
      editable="true" />
    <Condition ID="ShouldPowerOn"
      editable="true" />
    <Action ID="Manual"
      editable="true" />
    <Control ID="ModeControl"
      editable="true" />
    <Action ID="PowerOff"
      editable="true" />
    <Action ID="PowerOn"
      editable="true" />
    <Action ID="Standby"
      editable="true" />
  </TreeNodesModel>

</root>

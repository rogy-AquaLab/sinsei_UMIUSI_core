<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="Main">
    <Sequence>
      <PowerOff />
      <KeepRunningUntilFailure>
        <Sequence>
          <Standby mode="{mode}" />
          <Running mode="{mode}" />
        </Sequence>
      </KeepRunningUntilFailure>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="PowerOff"
      editable="true" />
    <Action ID="Standby"
      editable="true" />
  </TreeNodesModel>

</root>
